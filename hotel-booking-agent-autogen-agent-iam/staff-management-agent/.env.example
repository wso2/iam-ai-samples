# General
# For Docker Compose: use the service name (ws://assistant-agent:8000)
# For local development: use localhost (ws://localhost:8000)
AGENT_BASE_URL=ws://assistant-agent:8000

# Asgardeo (OAuth provider)
ASGARDEO_CLIENT_ID=<ASGARDEO_CLIENT_ID>
ASGARDEO_BASE_URL=https://api.asgardeo.io/t/<ORG_NAME>
ASGARDEO_REDIRECT_URI=http://localhost:8000/callback

JWKS_URL=https://api.asgardeo.io/t/<ORG_NAME>/oauth2/jwks
JWT_ISSUER=https://api.asgardeo.io/t/<ORG_NAME>/oauth2/token
JWKS_CACHE_TTL=3600

# Agent
AGENT_ID=<AGENT_ID>
AGENT_SECRET=<AGENT_SECRET>

# API Service
# For Docker Compose: use the service name (http://backend:8001)
# For local development: use localhost (http://localhost:8001)
HOTEL_API_BASE_URL=http://backend:8001

# Gemini
GEMINI_API_KEY=<GEMINI_API_KEY>
